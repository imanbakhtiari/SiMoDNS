server:
    cache-max-ttl: {{ unbound_cache_max_ttl }}
    cache-min-ttl: {{ unbound_cache_min_ttl }}
    directory: "/opt/unbound/etc/unbound"
    edns-buffer-size: 4096
    interface: 0.0.0.0@53
    rrset-roundrobin: yes
    username: "_unbound"
    log-local-actions: no
    log-queries: yes
    log-replies: no
    log-servfail: no
    logfile: /dev/log
    verbosity: 5
    aggressive-nsec: yes
    delay-close: 10000
    do-daemonize: no
    do-not-query-localhost: no
    neg-cache-size: 4M
    qname-minimisation: yes
    access-control: 127.0.0.1/32 allow
    access-control: 192.168.0.0/16 allow
    access-control: 172.16.0.0/12 allow
    access-control: 10.0.0.0/8 allow
    auto-trust-anchor-file: "var/root.key"
    chroot: "/opt/unbound/etc/unbound"
    harden-algo-downgrade: yes
    harden-below-nxdomain: yes
    harden-dnssec-stripped: yes
    harden-glue: yes
    harden-large-queries: yes
    harden-referral-path: no
    harden-short-bufsize: yes
    hide-identity: yes
    hide-version: yes
    identity: "SIMO-DNS"
    private-address: 10.0.0.0/8
    private-address: 172.16.0.0/12
    private-address: 192.168.0.0/16
    private-address: 169.254.0.0/16
    ratelimit: 1000
    tls-cert-bundle: /etc/ssl/certs/ca-certificates.crt
    unwanted-reply-threshold: 10000
    use-caps-for-id: yes
    val-clean-additional: yes
    include: /opt/unbound/etc/unbound/security.conf
    infra-cache-slabs: 4
    key-cache-slabs: 4
    msg-cache-size: 113653760
    msg-cache-slabs: 4
    num-queries-per-thread: 4096
    num-threads: 1
    outgoing-range: 8192
    rrset-cache-size: 227307520
    rrset-cache-slabs: 4
    minimal-responses: yes
    prefetch: yes
    prefetch-key: yes
    serve-expired: yes
    so-reuseport: yes
    include: /opt/unbound/etc/unbound/a-records.conf
    forward-zone:
        name: "."
        forward-tls-upstream: {{ unbound_forward_tls_upstream }}
        {% for upstream in unbound_forward_upstream_servers %}
        forward-addr: {{ upstream }}
        {% endfor %}
remote-control:
    control-enable: no
    control-interface: 127.0.0.1